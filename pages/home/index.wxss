/* 试玩 */

.try-banner-play {
  width: 100%;
}

.try-play-info {
  width: 100%;
  height: 44rpx;
  margin: 40rpx 30rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.black-block {
  width: 44rpx;
  height: 44rpx;
}
.black-block img{
    width:44rpx;
    height:44rpx;
}

.try-font-head {
  font-size: 36rpx;
  line-height: 48rpx;
  color: rgb(32, 32, 32);
  margin-left: 19rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
}

.try-font-content {
  font-size: 24rpx;
  line-height: 48rpx;
  color: rgb(32, 32, 32);
}

.tryToPlayAlert {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.7);
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.game-content {
  margin: 0 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.try-play-list {
  width: 200rpx;
  text-align: center;
  font-size: 0;
}

.try-play-list image {
  width: 200rpx;
  border-radius: 20rpx;
  font-size: 0;
}

.try-play-list:nth-child(2) {
  width: 200rpx;
  height: 200rpx;
  margin-left: 45rpx;
  margin-right: 45rpx;
}

.try-img {
  width: 200rpx;
  height: 200rpx;
  font-size: 0;
}

.try-title {
  margin-left: 41rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  color: rgb(32, 32, 32);
  margin: 30rpx 0 18rpx 0;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.try-content {
  font-size: 22rpx;
  color: rgb(32, 32, 32);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 试玩广告 */

.try-ads-content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 160rpx;
  margin-top: 31rpx;
  margin-bottom: 35rpx;
}

/* 推荐 */

.recommend-container {
  /* margin-top: 30rpx; */
