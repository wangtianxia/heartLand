}

/* 推荐内容  */

.recommed-list-info {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-content: center;
  flex-wrap: wrap;
}

.recommend-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.recommend-play-list {
  width: 200rpx;
  margin-left: 38rpx;
}

.recommend-title {
  width: 200rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 48rpx;
  letter-spacing: 1rpx;
  color: #202020;
  text-align: center;
  margin-top: 19rpx;
  overflow: hidden;
