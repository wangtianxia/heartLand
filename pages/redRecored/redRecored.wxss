}

/* 分享的按钮 */

.shareRewardBtn text {
    line-height: 50rpx;
    font-size: 36rpx;
    background: rgb(255, 255, 255);
    border-radius: 50rpx;
    color: rgb(238, 12, 0);
    padding: 20rpx 65rpx;
