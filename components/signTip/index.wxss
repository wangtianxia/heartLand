.tryToPlayAlert {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    z-index: 100;
    background-color: rgba(0, 0, 0, 0.7);
    flex-direction: column;
    display: flex;
    align-items: center;
    justify-content: center;
    align-content: center;
}

.tryToPlayContent {
    width: 660rpx;
    height: 310rpx;
    border-radius: 20rpx;
    background: #fff;
    text-align: center;
    font-size: 30rpx;
    line-height: 46rpx;
}

.tryPlayInfo {
    margin-top: 90rpx;
}

.tryPlayBtn {
    margin-top: 70rpx;
    color: rgb(255, 85, 52);
    border-radius: 20rpx;
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.3);
}

.tryPlayBtn text {
    display: blcok;
    text-align: center;
}

.tryContainer {
    width: 100%;
    display: flex;
    justify-content: center;
    align-content: center;
}
